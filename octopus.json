{
  "workDir": ".",
  "dependencies": [
    {
      "name": "webcardinal",
      "actions": [
        {
          "type": "smartClone",
          "src": "https://github.com/webcardinal/webcardinal-bundler",
          "target": "./src",
          "collectLog": false
        },
        {
          "type": "execute",
          "cmd": "cd ./src/webcardinal && npm install && npm run bundle-all"
        }
      ]
    },
    {
      "name": "webcardinal-tests",
      "actions": [
        {
          "type": "execute",
          "cmd": "cd ./src/webcardinal/.webcardinal/components/webcardinal-core && npm i -D @types/jest@26.0.15 jest@26.6.3 jest-cli@26.6.3 @types/puppeteer@5.4.0 puppeteer@5.4.1 jest-stare dom-parser"
        }
      ]
    },
    {
      "name": "zxing-wrapper",
      "actions": [
        {
          "type": "smartClone",
          "src": "https://github.com/webcardinal/zxing-wrapper.git",
          "target": "./src/libs",
          "collectLog": false
        }
      ]
    },
    {
      "name": "clear-sky-theme",
      "actions": [
        {
          "type": "smartClone",
          "src": "https://github.com/PrivateSky/clear-sky-theme.git",
          "target": "./src/themes",
          "collectLog": false
        }
      ]
    }
  ],
  "clean": [
    {
      "name": "run-clean",
      "actions": [
        {
          "type": "execute",
          "cmd": "rm -rf ./src"
        },
        {
          "type": "execute",
          "cmd": "cd ./webc-app-tester@gh-pages && rm -rf ./webcardinal ./themes ./libs"
        }
      ]
    }
  ],
  "dev": [
    {
      "name": "build-webcardinal-components",
      "actions": [
        {
          "type": "buildWebCardinalComponents",
          "src": "./src/webcardinal/.webcardinal",
          "target": "./webc-app-tester@gh-pages/webcardinal",
          "options": {
            "DEV": true,
            "devComponents": [
              "webcardianl-core"
            ]
          }
        }
      ]
    }
  ],
  "build": [
    {
      "name": "build-webcardinal",
      "actions": [
        {
          "type": "buildWebCardinalComponents",
          "src": "./src/webcardinal/.webcardinal",
          "target": "./webc-app-tester@gh-pages/webcardinal"
        }
      ]
    },
    {
      "name": "copy-psk-code-dark-theme",
      "actions": [
        {
          "type": "copy",
          "src": "./src/webcardinal/.webcardinal/components/cardinal-wiki/node_modules/prismjs/themes/prism-tomorrow.css",
          "target": "./src/themes/clear-sky-theme/src/components/psk-code/psk-code.css",
          "options": {
            "overwrite": true
          }
        }
      ]
    },
    {
      "name": "copy-themes",
      "actions": [
        {
          "type": "copy",
          "src": "./src/themes/clear-sky-theme/src",
          "target": "./webc-app-tester@gh-pages/themes/clear-sky-theme",
          "options": {
            "overwrite": true
          }
        }
      ]
    },
    {
      "name": "copy-libs",
      "actions": [
        {
          "type": "copy",
          "src": "./src/libs",
          "target": "./webc-app-tester@gh-pages/libs",
          "options": {
            "overwrite": true
          }
        }
      ]
    },
    {
      "name": "rm-git-from-zxing-wrapper",
      "actions": [
        {
          "type": "execute",
          "cmd": "cd ./webc-app-tester@gh-pages/libs/zxing-wrapper && rm -rf .git"
        }
      ]
    }
  ],
  "release": [
    {
      "name": "release-webcardinal",
      "actions": [
        {
          "type": "copy",
          "src": "./src/webcardinal/release",
          "target": "./dist",
          "options": {
            "overwrite": true
          }
        }
      ]
    }
  ],
  "test": [
    {
      "name": "run-automated-tests",
      "actions": [
        {
          "type": "execute",
          "cmd": "rm -rf ./src/webcardinal/.webcardinal/components/webcardinal-core/test"
        },
        {
          "type": "execute",
          "cmd": "rm -rf ./pages/automated-tests/results"
        },
        {
          "type": "copy",
          "src": "./pages/automated-tests/tests",
          "target": "./src/webcardinal/.webcardinal/components/webcardinal-core/test",
          "options": {
            "overwrite": true
          }
        },
        {
          "type": "execute",
          "cmd": "cd ./src/webcardinal/.webcardinal/components/webcardinal-core && npx stencil test --spec --e2e --testResultsProcessor=jest-stare"
        },
        {
          "type": "execute",
          "cmd": "node ./pages/automated-tests/scripts"
        },
        {
          "type": "move",
          "src": "./src/webcardinal/.webcardinal/components/webcardinal-core/test/reports",
          "target": "./pages/automated-tests/results",
          "options": {
            "overwrite": true
          }
        }
      ]
    }
  ],
  "create-local-test": [
    {
      "name": "create-local-test",
      "actions": [
        {
          "type": "copy",
          "src": "./pages/automated-tests/tests",
          "target": "./src/webcardinal/.webcardinal/components/webcardinal-core/test",
          "options": {
            "overwrite": true
          }
        }
      ]
    }
  ],
  "commit-local-test": [
    {
      "name": "commit-local-test",
      "actions": [
        {
          "type": "move",
          "src": "./src/webcardinal/.webcardinal/components/webcardinal-core/test/reports",
          "target": "./pages/automated-tests/results",
          "options": {
            "overwrite": true
          }
        }
      ]
    }
  ]
}